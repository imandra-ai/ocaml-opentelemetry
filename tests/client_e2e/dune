 (deps %{bin:emit1_eio})
 (enabled_if
  (>= %{ocaml_version} 5.0))
 (libraries clients_e2e_lib alcotest opentelemetry opentelemetry.client))

(executable
 (name signal_reporter_server)
 (modules signal_reporter_server)
 (libraries signal_gatherer))
